{
  "short_name": "shoppiem-ai",
  "name": "Shoppiem AI",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "dist/index.735b2751.css",
        "dist/index.b284f5af.css",
        "dist/index.fd2011b2.css"
      ],
      "js": ["dist/index.b48ba010.js"]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
